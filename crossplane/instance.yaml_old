apiVersion: ec2.aws.crossplane.io/v1alpha1
kind: Instance
metadata:
  name: sample-instance
spec:
  forProvider:
    region: us-east-1
    imageId: ami-07860a2d7eb515d9a
    instanceType: t2.nano
    blockDeviceMappings:
      - deviceName: /dev/sdx
        ebs:
          volumeSize: 4
          deleteOnTermination: true
          volumeType: gp2
    subnetIdRef:
      name: sample-subnet1
  providerConfigRef:
    name: default
